<div class="container">
  <div class"row-fluid">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: "form-horizontal" }) do |f| %>

      <%= devise_error_messages! %>

      <fieldset>
        <legend>¿Has olvidado tu contraseña?</legend>
        
        <div class="control-group">
          <%= f.label :email, class: 'control-label' %>
          <div class="controls">
            <%= f.email_field :email, :autofocus => true %>
          </div>
        </div>
      
        <div class="form-actions">
          <%= f.submit "Enviadme las instrucciones para cambiar mi contraseña", class: 'btn btn-primary' %>
        </div>
      </fieldset>

    <% end %>
    
    <%= render "devise/shared/links" %>
    
  </div>
</div>
