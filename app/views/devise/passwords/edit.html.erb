<div class="container">
  <div class"row-fluid">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, class: "form-horizontal" }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <%= devise_error_messages! %>

      <fieldset>
        <legend>Cambiar tu contrase単a</legend>
        
        <div class="control-group">
          <%= f.label :password, "Nueva contrase単a", class: 'control-label' %>
          <div class="controls">
            <%= f.password_field :password, :autofocus => true %>
          </div>
        </div>
        
        <div class="control-group">
          <%= f.label :password_confirmation, "Confirmar contrase単a", class: 'control-label' %>
          <div class="controls">
            <%= f.password_field :password_confirmation %>
          </div>
        </div>
      
        <div class="form-actions">
          <%= f.submit "Cambiar mi contrase単a", class: 'btn btn-primary' %>
        </div>
      </fieldset>

    <% end %>
    
    <%= render "devise/shared/links" %>
    
  </div>
</div>
